{
  "name": "modern-monaco",
  "description": "A modern version of Monaco Editor",
  "version": "0.2.1",
  "type": "module",
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "types": "./types/index.d.ts"
    },
    "./core": {
      "import": "./dist/core.mjs",
      "types": "./types/core.d.ts"
    },
    "./workspace": {
      "import": "./dist/workspace.mjs",
      "types": "./types/workspace.d.ts"
    },
    "./ssr": {
      "workerd": "./dist/ssr/workerd.mjs",
      "import": "./dist/ssr/index.mjs",
      "types": "./types/ssr.d.ts"
    },
    "./editor-core": {
      "import": "./dist/editor-core.mjs",
      "types": "./types/monaco.d.ts"
    },
    "./editor-worker": {
      "import": "./dist/editor-worker.mjs"
    },
    "./editor-worker-main": {
      "import": "./dist/editor-worker-main.mjs"
    },
    "./cache": {
      "import": "./dist/cache.mjs"
    },
    "./shiki": {
      "import": "./dist/shiki.mjs"
    },
    "./util": {
      "import": "./dist/util.mjs"
    },
    "./lsp/*": {
      "import": "./dist/lsp/*.mjs"
    }
  },
  "esm.sh": {
    "bundle": false
  },
  "scripts": {
    "prepublishOnly": "deno run -A --no-lock scripts/build.ts",
    "prepare": "deno run -A --no-lock scripts/patch.ts",
    "update-language-configurations": "deno run -A --no-lock scripts/update-language-configurations.ts",
    "dev": "deno run -A --no-lock scripts/dev.ts",
    "fmt": "dprint fmt"
  },
  "files": [
    "dist/",
    "types/"
  ],
  "browser": {
    "process": false,
    "buffer": false
  },
  "sideEffects": false,
  "devDependencies": {
    "@esm.sh/import-map": "0.1.1",
    "@shikijs/core": "3.12.2",
    "@shikijs/engine-oniguruma": "3.12.2",
    "monaco-editor-core": "0.53.0",
    "tm-grammars": "1.24.10",
    "tm-themes": "1.10.9",
    "typescript": "5.9.2",
    "vscode-css-languageservice": "6.3.7",
    "vscode-html-languageservice": "5.5.1",
    "vscode-json-languageservice": "5.6.1",
    "vscode-languageserver-textdocument": "1.0.12",
    "vscode-languageserver-types": "3.17.5"
  },
  "peerDependencies": {
    "typescript": ">= 5.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/esm-dev/modern-monaco.git"
  },
  "license": "MIT"
}
