{
  "compilerOptions": {
    "paths": {
      "~/*": ["./src/*"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "webworker"],
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "strictNullChecks": true,
    "noUnusedLocals": true
  },
  "include": [
    "src/**/*.ts"
  ]
}
